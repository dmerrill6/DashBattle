<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <h2>Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, class:"control-label" %>
      <%= f.email_field :email, class: "form-control input-lg", autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :password, class:"control-label" %>
      <%= f.password_field :password, class: "form-control input-lg", autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in" %>
    </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
